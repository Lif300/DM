<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"><![CDATA[

    EditText
        android:id="@+id/txtCorreoPerfil"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#41D4A9"
        android:ems="10"
        android:fontFamily="@font/micross"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCambios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543" />







    ]]>

    <EditText
        android:id="@+id/txtTelPerfil"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#41D4A9"
        android:ems="10"
        android:fontFamily="@font/micross"
        android:hint="TelÃ©fono"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCambios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreApell"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/btnGuardarCambios"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:background="@drawable/boton2"
        android:text="Guardar cambios"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="613dp" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_menu_camera"
        android:backgroundTint="#5d737e"
        app:layout_constraintStart_toStartOf="@+id/profilePic"
        app:layout_constraintTop_toTopOf="@+id/profilePic"
        tools:ignore="OnClick" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/txtNombreApell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/micross"
        android:gravity="center"
        android:text="FirstName LastName"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCambios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>